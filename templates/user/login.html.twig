{% extends 'base.html.twig' %}

{% block title %}{{ 'user.login.form.title'|trans({}, 'messages') }}{% endblock %}

{% block content %}
    <div class="max-w-md mx-auto bg-white border border-gray-200 shadow-lg rounded-lg overflow-hidden">
        <div class="px-8 py-6">
            {% if error %}
                <div class="mb-4 p-4 bg-red-50 border border-red-400 text-red-700 rounded">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <form method="post" action="{{ path('app_login') }}" class="space-y-6">
                {# E-Mail-Feld #}
                <div>
                    <label for="username" class="block text-sm font-medium text-gray-700 mb-2">
                        {{ 'user.login.form.email'|trans({}, 'messages') }}
                    </label>
                    <input
                            type="email"
                            name="email"
                            id="username"
                            value="{{ last_username }}"
                            required
                            autofocus
                            autocomplete="email"
                            class="w-full rounded border border-gray-300 bg-gray-50 px-3 py-2
                 focus:outline-none focus:ring focus:ring-blue-200 focus:border-blue-500"
                    >
                </div>

                {# Passwort-Feld #}
                <div>
                    <label for="password" class="block text-sm font-medium text-gray-700 mb-2">
                        {{ 'user.login.form.password'|trans({}, 'messages') }}
                    </label>
                    <input
                            type="password"
                            name="password"
                            id="password"
                            required
                            autocomplete="current-password"
                            class="w-full rounded border border-gray-300 bg-gray-50 px-3 py-2
                 focus:outline-none focus:ring focus:ring-blue-200 focus:border-blue-500"
                    >
                </div>

                {# CSRF-Token #}
                <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

                {# Remember-Me Checkbox #}
                <div class="flex items-center">
                    <input
                            type="checkbox"
                            name="_remember_me"
                            id="_remember_me"
                            class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
                    >
                    <label for="_remember_me" class="ml-2 block text-sm text-gray-700">
                        {{ 'user.login.form.remember_me'|trans({}, 'messages') }}
                    </label>
                </div>

                {# Submit-Button #}
                <div>
                    <button
                            type="submit"
                            class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm
                 text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring focus:ring-blue-200"
                    >
                        {{ 'user.login.form.submit'|trans({}, 'messages') }}
                    </button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
