{% extends 'base.html.twig' %}

{% block title %}Startseite – Ravitar{% endblock %}

{% block content %}
    <section class="relative overflow-hidden bg-gradient-to-br from-indigo-600 via-purple-600 to-pink-500 clip-hero">
        <div class="absolute inset-0 overflow-hidden">
            <div class="absolute top-0 -left-24 w-64 h-64 bg-indigo-300/30 rounded-full animate-float"></div>
            <div class="absolute -bottom-24 right-0 w-72 h-72 bg-pink-300/30 rounded-full animate-float animate-delay-200"></div>
        </div>

        <div class="container mx-auto px-4 py-24 lg:py-32 relative z-10 text-center">
            <h1 class="text-5xl md:text-6xl font-extrabold text-white leading-tight animate-fade-in-up">Willkommen bei
                Ravitar</h1>
            <p class="mt-4 text-xl md:text-2xl text-white/90 animate-fade-in-up animate-delay-200">
                Deine Plattform für Entwickler, Admins & Tech-Interessierte
            </p>
            <div class="mt-8 sm:flexsm:flex-row items-center space-y-4 sm:space-y-0 sm:space-x-4 animate-fade-in-up animate-delay-400">
                <a href="#" class="btn-primary text-center">Beiträge entdecken</a>
                <a href="#" class="btn-secondary text-center">Zur Community</a>
            </div>
        </div>
    </section>

    <div class="section-diagonal no-section-bottom"></div>

    {% set posts = [
        { title: 'Post 1', excerpt: '…', date: '2025-05-15', colsMd: 2, rowsMd: 1, colsLg: 2, rowsLg: 1 },
        { title: 'Post 2', excerpt: '…', date: '2025-05-14', colsMd: 1, rowsMd: 1, colsLg: 1, rowsLg: 1 },
        { title: 'Post 3', excerpt: '…', date: '2025-05-13', colsMd: 1, rowsMd: 1, colsLg: 1, rowsLg: 1 },
        { title: 'Post 1', excerpt: '…', date: '2025-05-15', colsMd: 1, rowsMd: 1, colsLg: 1, rowsLg: 1 },
        { title: 'Post 2', excerpt: '…', date: '2025-05-14', colsMd: 1, rowsMd: 1, colsLg: 1, rowsLg: 1 },
    ] %}

    <section class="mt-12 py-16">
        <div class="container mx-auto px-4 lg:px-8">
            <h2 class="text-3xl font-bold mb-8 text-center animate-fade-in-up">
                Aktuelle Blog-Beiträge
            </h2>

            <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-3 auto-rows-fr gap-8">
                {% for post in posts %}
                    {% set spanClasses = [
                        'md:col-span-' ~ post.colsMd,
                        'md:row-span-' ~ post.rowsMd,
                        'lg:col-span-' ~ post.colsLg,
                        'lg:row-span-' ~ post.rowsLg
                    ]|join(' ') %}

                    <article class="card-hover animate-fade-in-up animate-delay-{{ loop.index0 * 150 }} {{ spanClasses }}">
                        <h3 class="text-{{ loop.first ? '2xl font-bold' : 'xl font-semibold' }} mb-2">
                            {{ post.title }}{% if loop.first %} (Featured){% endif %}
                        </h3>
                        <p class="text-gray-600 mb-4">{{ post.excerpt }}</p>
                        <div class="text-sm text-gray-400 mb-3">{{ post.date }}</div>
                        <a href="#" class="text-indigo-600 hover:underline">Weiterlesen →</a>
                    </article>
                {% endfor %}
            </div>
        </div>
    </section>

    <section class="mt-12 py-16 bg-white">
        <div class="container mx-auto px-4 lg:px-8">
            <h2 class="text-3xl font-bold mb-6 text-center animate-fade-in-up">Heiße Themen im Forum</h2>
            <ul class="space-y-4">
                {% for topic in ['Deployment-Tipps', 'Symfony 7 Tricks', 'Tailwind Hacks', 'Netcup Server-Setup'] %}
                    <li class="forum-item animate-fade-in-up">
                        <a href="#" class="text-lg font-medium text-gray-800">{{ topic }}</a>
                        <span class="text-sm text-gray-500">42 Antworten</span>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </section>

    <section class="mt-12 bg-white py-16">
        <div class="container mx-auto px-4 lg:px-8 grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
            <div class="animate-fade-in-up">
                <h2 class="text-3xl font-bold mb-4">Was ist Ravitar?</h2>
                <p class="text-gray-700 leading-relaxed">
                    Ravitar ist eine modulare Plattform, die Wissen, Tools und Community für Entwickler &
                    Systemadministratoren intelligent verbindet – damit du immer up-to-date bleibst.
                </p>
            </div>
            <div class="animate-fade-in-up animate-delay-200">
                <img src="https://via.placeholder.com/500x300" alt="Ravitar Überblick"
                     class="w-full h-auto rounded-lg shadow-lg">
            </div>
        </div>
    </section>

{% endblock %}
