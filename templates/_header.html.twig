<header class="glass-header sticky top-0 z-50 animate-fade-in-down" data-controller="menu search">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex items-center justify-between h-16">
        <a href="{{ path('landing') }}" class="text-2xl font-bold text-[var(--color-primary-700)] hover:text-[var(--color-primary-900)] transition-colors">Ravitar</a>

        {# Desktop-Nav #}
        <nav class="hidden md:flex space-x-6 items-center">
            <a href="{{ path('blog_post_list') }}" class="text-[var(--color-gray-700)] hover:text-[var(--color-primary-700)] transition-colors">Blog</a>
            <a href="https://forum.ravitar.com" class="text-[var(--color-gray-700)] hover:text-[var(--color-primary-700)] transition-colors">Community</a>
        </nav>

        {# Mobile-Burger #}
        <button data-action="menu#toggle" class="md:hidden focus:outline-none" aria-label="Menü öffnen">
            <svg class="w-6 h-6 text-[var(--color-gray-700)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
            </svg>
        </button>
    </div>

    {# Mobile-Menu-Panel #}
    <div data-menu-target="panel" class="md:hidden hidden">
        <nav class="px-4 py-2 space-y-2" data-action="click->menu#toggle">
            <a href="{{ path('blog_post_list') }}" class="block text-[var(--color-gray-700)] hover:text-[var(--color-primary-700)] transition-colors">Blog</a>
            <button type="button" class="block w-full text-left text-[var(--color-gray-700)] hover:text-[var(--color-primary-700)] transition-colors" data-action="search#toggle">Suche</button>
            <a href="https://forum.ravitar.com" class="block text-[var(--color-gray-700)] hover:text-[var(--color-primary-700)] transition-colors">Community</a>
        </nav>
    </div>
</header>

<div data-search-target="form" class="hidden md:block">
    <div class="container mx-auto px-4 lg:px-8 py-4">
        <form action="{{ path('blog_post_search') }}" method="get" class="flex justify-center">
            <input type="text" name="q" value="{{ app.request.get('q') }}" placeholder="{{ 'blog.search.placeholder'|trans }}" class="w-full md:w-1/3 p-2 border border-[var(--color-gray-300)] rounded-l-lg focus:outline-none focus:ring-2 focus:ring-[var(--color-primary-500)]" aria-label="Suche nach Blogbeiträgen"/>
            <button type="submit" class="btn-primary text-sm">{{ 'blog.search.submit'|trans }}</button>
        </form>
    </div>
</div>
